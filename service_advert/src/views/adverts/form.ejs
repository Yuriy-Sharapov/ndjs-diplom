<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inputShortText">Заголовок</label>
        <input type="text"
               value="<%= advert.shortText %>"
               name="shortText"
               class="form-control"
               id="inputShortText">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesc"
        ><%= advert.description %></textarea>
    </div>

    <% if(advert.images.length) { %>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            
            <div class="carousel-inner">
                <% advert.images.map((el, idx) => {  %>
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="<%= el %>" alt="First slide">
                    </div>
                <% }) %>
            </div>

            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Предыдущая</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Следующая</span>
            </a>
        </div>
    <% } %>

